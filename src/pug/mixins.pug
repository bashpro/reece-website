// main: ../index.pug
mixin cards(i)
  .cardbox
    .profile
      .profilepic(class= i.profile)
    .profilename
      p.
        #{i.pname}
    .profiletext
      p.
        #{i.description}
        
mixin price(i)
  .price-box
    .pb-card 
      .pb-iconholder
        .pb-icon(id= i.icon) 
      .pb-title
        p.
          #{i.title}
      .pb-price
        p.
          #{i.price}
      .pb-description
        p.
          #{i.description}
    
