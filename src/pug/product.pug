  .p-holder
    .ph-container
      //vars
      - const basic = {data: '01', icon: 'basic', title: 'basic running', price: '£80', description: 'Lets run together!'}
      - const running = {data: '02',  icon: 'running', title: 'advance running', price: '£120', description: 'Wanna race?'}      
      - const strength = {data: '03',  icon: 'strength', title: 'Strength Program', price: '£150', description: 'Your getting stronger, keep it up!'}
      - const nutrition = {data: '04',  icon: 'diet', title: 'Nutrition program ', price: '£200', description: 'Good food choice, keep yourself healthy!'}
      
      //price cards 
      +prices(basic)
      +prices(running)
      +prices(strength)
      +prices(nutrition)
