// main: ../index.pug
.productinfo.hide
  .pi-box
    .pi-close
      .pi-closebtn
    .pi-cardholder
      .pi-card
        .pi-button-hld
          .pi-button#piback
        .pic-holder
          
          //vars
          - const basic1 = {data: '01', id: 'card01', icon: 'basic', title: 'basic running', price: '£80', description: 'Lets run together!'}
          - const running1 = {data: '02', id: 'card02',  icon: 'running', title: 'advance running', price: '£120', description: 'Wanna race?'}      
          - const strength1 = {data: '03', id: 'card03',  icon: 'strength', title: 'Strength Program', price: '£150', description: 'Your getting stronger, keep it up!'}
          - const nutrition1 = {data: '04',  id: 'card04', icon: 'diet', title: 'Nutrition program ', price: '£200', description: 'Good food choice, keep yourself healthy!'}
          
          //price cards 
          +price(basic1)
          +price(running1)
          +price(strength1)
          +price(nutrition1)
          
        .pi-button-hld
          .pi-button#pifront   
      .pi-description
        .pi-descbox
          //vars
          - const basicinfo = {id: 'info01', text: 'One off program giving you an insight/basic program of either getting fit and eventually having dreams of being faster.'}
          - const runninginfo = {id: 'info02', text: 'Similar to basic program we offer daily contact with coach, giving you advice on pacing through terrain or long distances!'}
          - const strengthinfo = {id: 'info03', text: 'Strength program is designed to train all aspects of your body through intense training tailored to suit your level from the coach, with daily contact for advice!'}
          - const nutritioninfo = {id: 'info04', text: 'Nutrition combines all programs to help your overall well being. A structure for your diet will be put in place. Hopefully giving you the oppurtunity to reach your fitness goals!!!'}
          
          +info(basicinfo)
          +info(runninginfo)
          +info(strengthinfo)
          +info(nutritioninfo) 
        
          .pid-box.btnactive 
            .pid-btn
              a(href="https://forms.gle/qLbEgw4dxAwZKQ8w7", target="_blank") Google Forms

.product#02
  .subtitle.a-text
    p Pricing
